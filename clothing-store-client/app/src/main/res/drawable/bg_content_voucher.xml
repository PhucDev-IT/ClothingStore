<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background" />

            <corners android:radius="@dimen/_20sdp" />
            <size
                android:width="@dimen/_200sdp"
                android:height="@dimen/_100sdp" />
        </shape>
    </item>

    <!-- Circle on the left -->
    <item android:gravity="left|center_vertical" android:left="-50dp">
        <shape android:shape="oval">
            <size android:height="@dimen/_50sdp"
                android:width="@dimen/_50sdp"/>
            <solid android:color="@color/transparent" />
            <stroke android:width="1dp"
                android:color="@color/gray_light"/>
        </shape>
    </item>

    <!-- Circle on the right -->
    <item android:gravity="right|center_vertical" android:right="-50dp">
        <shape android:shape="oval">
            <size android:height="@dimen/_50sdp"
                android:width="@dimen/_50sdp"/>
            <solid android:color="@color/transparent" />
            <stroke android:width="1dp"
                android:color="@color/gray_light"/>
        </shape>
    </item>
</layer-list>