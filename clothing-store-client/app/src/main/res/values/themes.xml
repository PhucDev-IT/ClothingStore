<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Clothing" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <!--  Màu chữ chính.-->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColor">@color/text_primary</item>

        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="bottomNavigationStyle">@style/Theme.Bottom.Navigation</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>

        <!--  Màu chính đậm, thường sử dụng cho status bar..-->
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="Theme.Clothing" parent="Base.Theme.Clothing" />
    <style name="Theme.Bottom.Navigation" parent="Theme.MaterialComponents.Light.NoActionBar"/>



    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/FabShapeStyle</item>
    </style>
    <style name="FabShapeStyle" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>
</resources>