<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activities.ProductDetailsActivity">

       <ScrollView
           android:layout_above="@id/ll_bottom"
           android:id="@+id/scrollable"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <FrameLayout
                   android:id="@+id/container_header"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <com.denzcoskun.imageslider.ImageSlider
                       android:id="@+id/imgProduct"
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/_250sdp"
                       android:layout_gravity="center"
                       app:iss_auto_cycle="false"
                       app:iss_delay="5000"
                       app:iss_period="5000"
                       app:iss_text_align="CENTER" />
                   <LinearLayout
                       android:id="@+id/linearLayout"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/_10sdp"
                       android:baselineAligned="false"
                       android:gravity="center"
                       android:orientation="horizontal"
                       android:paddingHorizontal="@dimen/_15sdp"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toTopOf="parent">

                       <LinearLayout
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1">

                           <ImageButton
                               android:id="@+id/btnBack"
                               android:layout_width="@dimen/_35sdp"
                               android:layout_height="@dimen/_35sdp"
                               android:background="@drawable/circle_layout_border"
                               android:contentDescription="@string/todo"
                               android:src="@drawable/icon_back_24"
                               app:tint="@color/colorPrimary" />
                       </LinearLayout>

                       <LinearLayout
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:gravity="end">

                           <ImageButton
                               android:contentDescription="@string/todo"
                               android:id="@+id/btnIsLike"
                               android:layout_width="40dp"
                               android:layout_height="40dp"
                               android:background="@drawable/circle_layout_border"
                               android:src="@drawable/icons8_heart_empty_30" />
                       </LinearLayout>
                   </LinearLayout>
               </FrameLayout>

           <LinearLayout
               android:padding="@dimen/_10sdp"
               android:layout_below="@id/container_header"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <LinearLayout
                   android:id="@+id/container_name"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/_20sdp"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/tvNameProduct"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="0.5"
                       android:textSize="@dimen/text_size_default"
                       android:fontFamily="@font/inter_bold" />

                   <TextView
                       android:id="@+id/tvPrice"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:gravity="end"
                       android:textColor="@color/color_red"
                       android:textSize="@dimen/text_size_default"
                       android:textStyle="bold" />
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/ll_details"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="10dp"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/text_primary"
                       android:fontFamily="@font/inter_bold"
                       android:text="@string/information_product_details"
                       android:textSize="@dimen/text_size_default" />

                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:gravity="end"
                       android:orientation="horizontal"
                       android:paddingHorizontal="@dimen/_10sdp"
                       tools:ignore="UseCompoundDrawables">

                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:contentDescription="@string/todo"
                           app:srcCompat="@drawable/baseline_star_24" />

                       <TextView
                           android:id="@+id/tvRateEvaluate"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center_vertical"
                           android:text="5.0"
                           android:textColor="@color/gray"
                           android:textSize="15sp" />
                   </LinearLayout>
               </LinearLayout>

               <LinearLayout
                   android:orientation="vertical"
                   android:gravity="center"
                   android:layout_margin="@dimen/_10sdp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <ImageView
                       android:id="@+id/img_qrcode"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       />
                   <TextView
                       android:id="@+id/tv_id_barcode"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/inter_medium"/>
               </LinearLayout>
               <TextView
                   android:id="@+id/tvDescription"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/inter_regular"
                   android:text="@string/lorem_ipsum"
                   android:textColor="@color/gray" />
               <View
                   android:id="@+id/dash_line_3"
                   android:layout_width="match_parent"
                   android:layout_height="2dp"
                   android:layout_marginTop="@dimen/_20sdp"
                   android:background="@drawable/dashed_line" />
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:orientation="vertical">

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/inter_bold"
                           android:text="@string/label_classify"
                           android:textSize="@dimen/text_size_default" />

                       <TextView
                           android:id="@+id/tvSelectClassify"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/inter_medium"
                           android:layout_marginStart="@dimen/_10sdp"
                           android:textSize="@dimen/text_size_default" />
                   </LinearLayout>

                   <HorizontalScrollView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/_10sdp"
                       android:paddingStart="@dimen/_10sdp"
                       tools:ignore="RtlSymmetry">

                       <RadioGroup
                           android:id="@+id/rdoGroupClassifies"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal" />
                   </HorizontalScrollView>
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/ll_size"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/_10sdp"
                   android:orientation="vertical">

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/inter_bold"
                           android:text="@string/select_size"
                           android:textSize="@dimen/text_size_default"
                           />

                       <TextView
                           android:id="@+id/tv_quantity"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginStart="@dimen/_10sdp"
                           />
                   </LinearLayout>

                   <HorizontalScrollView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="10dp"
                       android:paddingStart="10dp"
                       tools:ignore="RtlSymmetry">

                       <RadioGroup
                           android:id="@+id/rdo_group_size"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal" />
                   </HorizontalScrollView>
               </LinearLayout>
           </LinearLayout>
           </RelativeLayout>
       </ScrollView>
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_corner_top_lr"
        android:elevation="@dimen/_10sdp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_20sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnMinus"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/btn_up_down"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/baseline_remove_24"
                app:tint="@color/color_icon" />

            <TextView
                android:id="@+id/tvNumberBuyProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:text="1"
                android:fontFamily="@font/inter_bold"
                android:textSize="@dimen/text_size_default"
                />

            <ImageButton
                android:contentDescription="@string/todo"
                app:tint="@color/color_icon"
                android:id="@+id/btnUp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/btn_up_down"
                app:srcCompat="@drawable/baseline_add_24" />

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAddToCart"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:background="@drawable/btn_out_line"
            android:text="@string/default_btn_add_to_cart"
            android:textAllCaps="false"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>