<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    tools:context=".FragmentLayout.HomeFragment">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <LinearLayout
               android:paddingHorizontal="15dp"
               android:layout_marginTop="10dp"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:orientation="vertical"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Location"
                       android:textColor="@color/placeholdercolor"
                       android:textSize="16sp"/>
                   <LinearLayout
                       android:layout_marginTop="5dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/baseline_location_on_24"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/inter_bold"
                           android:textStyle="bold"
                           android:textSize="17sp"
                           android:text="New York, USA"
                           />
                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/baseline_keyboard_arrow_down_24"
                           />
                   </LinearLayout>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:background="@drawable/circle_background_placeholder"
                   android:gravity="center">

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/baseline_notifications_24" />
               </LinearLayout>
           </LinearLayout>
           <LinearLayout
               android:paddingHorizontal="15dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/tvSearch"
                   android:layout_width="300dp"
                   android:layout_height="40dp"
                   android:drawableStart="@drawable/search"
                   android:textSize="20sp"
                   android:text="Search"
                   android:textColor="@color/placeholdercolor"
                   android:drawablePadding="10dp"
                   android:gravity="center_vertical"
                   android:paddingHorizontal="10dp"
                   android:background="@drawable/bg_search_white"
                   />
           </LinearLayout>

             <androidx.cardview.widget.CardView
                 android:layout_marginHorizontal="15dp"
                 android:layout_width="match_parent"
                 android:layout_height="180dp"
                 android:layout_marginTop="20dp"
                 app:cardCornerRadius="10dp">
                 <com.denzcoskun.imageslider.ImageSlider
                     android:id="@+id/image_slider"
                     android:layout_gravity="center"
                     android:layout_width="350dp"
                     android:layout_height="match_parent"
                     app:iss_auto_cycle="true"
                     app:iss_delay="5000"
                     app:iss_period="5000"
                     app:iss_text_align="CENTER" />
             </androidx.cardview.widget.CardView>

            <LinearLayout
                android:paddingHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:elevation="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Danh má»¥c"
                        android:textSize="18sp"
                        android:fontFamily="@font/inter_bold"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See All"
                        android:textColor="@color/primarykeyColor"
                        android:textSize="16sp"
                        android:layout_gravity="right"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginVertical="10dp"
                   android:orientation="horizontal">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:orientation="vertical">
                       <ImageButton
                           android:layout_width="60dp"
                           android:layout_height="60dp"
                           android:padding="10dp"
                           android:elevation="1dp"
                           android:src="@drawable/icons8_t_shirt_30"
                           android:background="@drawable/bg_category_circle"
                           android:contentDescription="TODO" />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="T-shirt"
                           android:textSize="16sp"
                           android:layout_marginVertical="5dp"
                           android:layout_gravity="center"
                           android:fontFamily="@font/inter_semi_bold"
                           android:textStyle="bold"
                           />
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:orientation="vertical">
                       <ImageButton
                           android:layout_width="60dp"
                           android:layout_height="60dp"
                           android:padding="10dp"
                           android:elevation="1dp"
                           android:src="@drawable/icons8_pant_30"
                           android:background="@drawable/bg_category_circle"
                           android:contentDescription="TODO" />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Pant"
                           android:textSize="16sp"
                           android:layout_marginVertical="5dp"
                           android:fontFamily="@font/inter_semi_bold"
                           android:textStyle="bold"
                           />
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:orientation="vertical">
                       <ImageButton
                           android:layout_width="60dp"
                           android:layout_height="60dp"
                           android:padding="10dp"
                           android:elevation="1dp"
                           android:src="@drawable/icons8_dress_30"
                           android:background="@drawable/bg_category_circle"
                           android:contentDescription="TODO" />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Dress"
                           android:textSize="16sp"
                           android:layout_marginVertical="5dp"
                           android:fontFamily="@font/inter_semi_bold"
                           android:textStyle="bold"
                           />
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:orientation="vertical">
                       <LinearLayout
                           android:layout_width="60dp"
                           android:layout_height="60dp"
                           android:gravity="center"
                           android:elevation="1dp"
                           android:background="@drawable/bg_category_circle">

                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:background="@drawable/icons8_jacket_30" />
                       </LinearLayout>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Jacket"
                           android:textSize="16sp"
                           android:layout_marginVertical="5dp"
                           android:fontFamily="@font/inter_semi_bold"
                           android:textStyle="bold"
                           />
                   </LinearLayout>
               </LinearLayout>
            </LinearLayout>

           <LinearLayout

               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingHorizontal="10dp"
               android:elevation="5dp"
               android:orientation="horizontal">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Flash Sale"
                   android:layout_weight="1"
                   android:textSize="18sp"
                   android:fontFamily="@font/inter_bold"
                   android:textStyle="bold"/>
                <LinearLayout
                    android:id="@+id/lnTimeSale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Closing in :"
                        android:textSize="15sp"
                        android:textColor="@color/placeholdercolor"
                        />
                    <TextView
                        android:id="@+id/tvHours"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/bg_text_sale"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="@color/primarykeyColor"
                        android:layout_marginHorizontal="5dp"
                        android:text="02"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"/>
                    <TextView
                        android:id="@+id/tvMinute"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/bg_text_sale"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="@color/primarykeyColor"
                        android:layout_marginHorizontal="5dp"
                        android:text="12"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"/>
                    <TextView
                        android:id="@+id/tvSecond"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/bg_text_sale"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="@color/primarykeyColor"
                        android:layout_marginHorizontal="5dp"
                        android:text="56"/>
                </LinearLayout>
           </LinearLayout>
           <HorizontalScrollView
               android:layout_marginTop="10dp"
               android:paddingStart="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               tools:ignore="RtlSymmetry">
               <RadioGroup
                   android:id="@+id/radioGroup"
                   android:orientation="horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </HorizontalScrollView>


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/lnProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ProgressBar
                        android:id="@+id/progress_circular"
                        android:layout_marginTop="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:indeterminate="true"
                        android:indeterminateTint="@color/primarykeyColor"
                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvProducts"
                        android:layout_marginBottom="50dp"
                        android:paddingHorizontal="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

       </LinearLayout>
   </ScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>