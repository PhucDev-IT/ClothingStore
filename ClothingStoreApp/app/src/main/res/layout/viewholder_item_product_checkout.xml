<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:gravity="center"
    android:background="@drawable/bg_bottom_line"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgProduct"
        android:layout_width="90dp"
        android:layout_height="100dp"
        app:shapeAppearanceOverlay="@style/RoundedSquare"
        app:srcCompat="@drawable/sample_borrow_jacket"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:paddingHorizontal="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/nameProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aó thun tuy dài nhưng không phế"
            android:textSize="16sp"
            android:lines="1"
            android:ellipsize="end"
            android:fontFamily="@font/inter_bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvClassify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_classify"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="@color/placeholdercolor"/>
                <TextView
                    android:id="@+id/tvSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/size_cart"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="@color/placeholdercolor"/>
                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50.000đ"
                    android:textColor="@color/red"
                    android:fontFamily="@font/inter_bold"/>
            </LinearLayout>

           <TextView
               android:id="@+id/tvQuantity"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="x2"
               android:textColor="@color/placeholdercolor"
               android:textSize="15sp"
               android:layout_gravity="bottom"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>