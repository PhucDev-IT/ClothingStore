<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ln_left_layout"
        android:padding="10dp"
        android:background="@drawable/bg_radius_outline_white"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvLeftText"
            android:textSize="15sp"
            android:fontFamily="@font/inter_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xin chào cậu!"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_right_layout"
        android:background="@drawable/bg_my_message"
        android:padding="10dp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvRightText"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xin chào cậu!"/>
    </LinearLayout>

</RelativeLayout>